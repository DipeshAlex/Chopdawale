<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="#ff4800">

        <SearchView
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:queryHint="Search Chopdawale"
            android:iconifiedByDefault="false"
            android:background="@drawable/searchviewbg"
            android:backgroundTint="@color/white"
            />



<!--        <EditText-->
<!--            android:id="@+id/text3"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="30dp"-->
<!--            android:layout_marginTop="35dp"-->
<!--            android:layout_marginEnd="30dp"-->
<!--            android:fontFamily="@font/bolo"-->
<!--            android:hint="Search"-->
<!--            android:background="@drawable/round_bg"-->
<!--            android:paddingLeft="12dp"-->
<!--            android:paddingTop="5dp"-->
<!--            android:paddingBottom="5dp"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="16dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            />-->

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:layout_above="@+id/bottom">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="50px"
                    app:cardElevation="20dp"
                    android:backgroundTint="#D9D9D9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/natraj"
                            android:layout_width="290px"
                            android:layout_height="290px"
                            android:src="@drawable/a" />
                        />

                        <TextView
                            android:id="@+id/n1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price - Rs.25"
                            android:fontFamily="@font/bolo"
                            android:textColor="@color/oranage"
                            android:layout_marginTop="-30dp"
                            android:paddingLeft="15dp"
                            android:textSize="16dp"
                            />

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity:"
                            android:fontFamily="@font/baloobhai"
                            android:textColor="@color/black"
                            android:layout_marginTop="-8dp"
                            android:paddingLeft="15dp"
                            />

                          <TextView
                            android:id="@+id/name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nataraj Eraser"
                            android:fontFamily="@font/bolo"
                            android:textColor="@color/black"
                            android:layout_marginStart="210dp"
                            android:layout_marginTop="-100dp"
                            android:paddingLeft="15dp"
                            android:textSize="20dp"
                            />

                        <Button
                            android:id="@+id/addcart1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/text5"
                            android:layout_marginStart="155dp"
                            android:backgroundTint="@color/white"
                            android:text="Add Cart"
                            android:elevation="50dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/baloobhai"
                            android:textColor="#FF4800"
                            />

                        <Button
                            android:id="@+id/buy1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@+id/text5"
                            android:layout_marginStart="260dp"
                            android:backgroundTint="@color/oranage"
                            android:text="Buy Now"
                            android:elevation="50dp"
                            android:layout_marginTop="-40dp"
                            android:fontFamily="@font/baloobhai"
                            android:textColor="#ffffff"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <!--    <FrameLayout-->
    <!--        android:layout_width="match_parent"-->
